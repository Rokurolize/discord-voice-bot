# Discord Voice TTS Bot Configuration
# Copy this file to .env and configure your settings

# Discord Bot Configuration
DISCORD_BOT_TOKEN=your_bot_token_here
TARGET_VOICE_CHANNEL_ID=your_voice_channel_id_here
TTS_ENGINE=voicevox

VOICEVOX_URL=http://localhost:50021
AIVIS_URL=http://127.0.0.1:10101

# Bot Behavior
COMMAND_PREFIX=!tts
MAX_MESSAGE_LENGTH=200
ENABLE_SELF_MESSAGE_PROCESSING=false  # Allow bot's own messages to be read aloud
MESSAGE_QUEUE_SIZE=10
RECONNECT_DELAY=5

# Rate Limiting
RATE_LIMIT_MESSAGES=5                  # Max messages per period
RATE_LIMIT_PERIOD=60                   # Period in seconds

# Logging
LOG_LEVEL=INFO                         # DEBUG, INFO, WARNING, ERROR
# LOG_FILE=logs/discord-voice-bot.log  # Uncomment to enable file logging

# Development
DEBUG=false