# Discord Voice TTS Bot Configuration
# Copy this file to .env and configure your settings

# Discord Configuration
DISCORD_TOKEN=your_discord_bot_token_here
VOICE_CHANNEL_ID=1350964414286921749

# TTS Configuration
TTS_ENGINE=voicevox                    # voicevox or aivis
TTS_SPEAKER=normal                     # normal, sexy, tsun, amai (voicevox) / normal, happy, tension, angry (aivis)
VOICEVOX_URL=http://localhost:50021
AIVIS_URL=http://127.0.0.1:10101

# Bot Behavior
COMMAND_PREFIX=!tts
MAX_MESSAGE_LENGTH=200
MESSAGE_QUEUE_SIZE=10
RECONNECT_DELAY=5

# Rate Limiting
RATE_LIMIT_MESSAGES=5                  # Max messages per period
RATE_LIMIT_PERIOD=60                   # Period in seconds

# Logging
LOG_LEVEL=INFO                         # DEBUG, INFO, WARNING, ERROR
# LOG_FILE=logs/discord-voice-bot.log  # Uncomment to enable file logging

# Development
DEBUG=false